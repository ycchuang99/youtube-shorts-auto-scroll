{
  "manifest_version": 3,
  "name": "YouTube Shorts Auto Scroll",
  "version": "1.2.0",
  "description": "Auto-scroll to next Shorts video and skip ads automatically",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "assets/images/scroll-icon-16.png",
      "48": "assets/images/scroll-icon-48.png",
      "128": "assets/images/scroll-icon-128.png"
    },
    "default_title": "YouTube Shorts Auto Scroll"
  },
  "icons": {
    "16": "assets/images/scroll-icon-16.png",
    "48": "assets/images/scroll-icon-48.png",
    "128": "assets/images/scroll-icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ]
}