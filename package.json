{
  "name": "youtube-shorts-auto-scroll",
  "version": "1.1.0",
  "description": "Automatically scrolls to the next YouTube Shorts video when the current one ends",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "npm run clean && npm run package",
    "package": "zip -r youtube-shorts-auto-scroll.zip manifest.json src/ -x '*.DS_Store'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ycchuang99/youtube-shorts-auto-scroll.git"
  },
  "keywords": [
    "youtube",
    "shorts",
    "chrome-extension",
    "auto-scroll"
  ],
  "author": "Evan Chuang",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.268",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
